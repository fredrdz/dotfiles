{
  "plugins": [
    "prettier-plugin-go-template"
  ],
  "pluginSearchDirs": false,
  "printWidth": 80,
  "proseWrap": "always",
  "semi": false,
  "overrides": [
    {
      "files": [
        "*.md"
      ],
      "options": {
        "proseWrap": "never",
        "tabWidth": 2,
        "singleQuote": true
      }
    },
    {
      "files": [
        "*.yaml",
        "*.yml"
      ],
      "options": {
        "proseWrap": "never",
        "tabWidth": 2,
        "singleQuote": true,
        "parser": "go-template"
      }
    }
  ]
}
